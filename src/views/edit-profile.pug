extends layouts/main.pug

block content
    .form-container
        form(action=`/users${routes.postEditProfile}` method="post", enctype="multipart/form-data")
            .file-upload
                label(for="avatar") Avatar
                input(type="file", name="avatar" accept="image/*")
            input(type="text", name="name", placeholder="Name" required value=loggedUser.name)
            input(type="email", name="email", placeholder="Email" required value=loggedUser.email)
            input(type="submit", value="Update Profile")