header.header
    .header__wrapper
        .header__column
            a(href=routes.home)
                i.fab.fa-youtube
        .header__column
            form(action=routes.search, method="get")
                input(type="text", name="term", placeholder="Search by term...")
        .header__column
            ul
                if !user.isAuthenticated
                    li
                        a(href=routes.getJoin) Join
                    li
                        a(href=routes.getLogin) Log In
                else 
                    li 
                        a(href=`/videos${routes.getUpload}`) Upload
                    li 
                        a(href=routes.userDetail(user.id)) Profile
                    li 
                        a(href=routes.logout) Log Out